<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LayoutAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/layout_colorAccent</item>
        <item name="colorPrimaryDark">@color/layout_colorPrimaryDark</item>
        <item name="colorAccent">@color/layout_colorAccent</item>
    </style>

    <style name="AuthAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/auth_colorPrimary</item>
        <item name="colorPrimaryDark">@color/auth_colorPrimaryDark</item>
        <item name="colorAccent">@color/auth_colorAccent</item>
    </style>

    <style name="VideoAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/video_colorPrimary</item>
        <item name="colorPrimaryDark">@color/video_colorPrimaryDark</item>
        <item name="colorAccent">@color/video_colorAccent</item>
    </style>

</resources>
